{
   "version": "0.2.0",
   "configurations": [
      {
         "name": "Launch Package",
         "type": "go",
         "request": "launch",
         "mode": "auto",
         "program": "${workspaceFolder}",
         "args": ["-d=${input:day}", "solve"]
      }
   ],
   "inputs": [
      {
         "id": "day",
         "type": "promptString",
         "description": "Enter the day to solve (e.g., 1, 2, 3, ...)"
      }
   ]
}
